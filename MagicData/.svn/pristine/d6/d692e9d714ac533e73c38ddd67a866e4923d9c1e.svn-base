<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="common" extends="base" namespace="/">
		
		<!-- 登录后跳转首页 -->
		<action name="index" class="loginAction" method="viewIndex">
		    <result name="success">/WEB-INF/jsp/home.jsp</result>
			<result name="inter">/login.jsp</result>
		</action>
		<action name="DataSmart" class="loginAction" method="DataSmart">
		    <result name="success">/WEB-INF/jsp/titanGraph/index.jsp</result>
		</action>
		<!-- 判断登录是否合法 -->
        <action name="getUserInfo" class="loginAction" method="getUserInfo">  
	          <result name="success" type= "redirectAction">index.action</result>
			  <result name="inter">/WEB-INF/jsp/user/messageInfo.jsp</result>
        </action> 
        <!-- 跳转注册页面 -->
        <action name="goRegister">  
	          <result>/WEB-INF/jsp/user/register.jsp</result>
        </action> 
        <!-- 注册实现 -->
         <action name="register" class="loginAction" method="register">  
	          <result name="success" type="redirectAction">getAllUser.action</result>
	          <result name="error">/WEB-INF/jsp/user/messageInfo.jsp</result>
        </action> 
        <!-- 用户列表页-->
        <action name="getAllUser" class="loginAction" method="getAllUser">
        	<result name="success">/WEB-INF/jsp/user/userList.jsp</result>
        	<result name="inter">/WEB-INF/jsp/user/messageInfo.jsp</result>
        </action> 
        <!-- 删除用户 -->
        <action name="deleteUser" class="loginAction" method="deleteUser">
        	<result name="success" type="redirectAction">getAllUser.action</result>
        </action>
        <!-- 修改密码 -->
        <action name="modifyPwd" class="loginAction" method="modifyPwd">
            <result name="success" type="redirectAction">index.action</result>
            <result name="inter">/WEB-INF/jsp/home.jsp</result>
        </action>
        <!-- 修改状态 -->
        <action name="modifyStatus" class="loginAction" method="modifyStatus">
            <result name="success" type="redirectAction">getAllUser.action</result>
        </action>
        <!-- 退出登录 -->
        <action name="quit" class="loginAction" method="quit">
            <result name="success">/login.jsp</result>
            <result name="inter">/WEB-INF/jsp/user/messageInfo.jsp</result>
        </action>
