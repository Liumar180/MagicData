<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="webRules" extends="base" namespace="/webrules">
		<action name="list" class="webRulesAction" method="list">
			<result>/WEB-INF/jsp/webrules/list.jsp</result>
		</action>
		<action name="input" class="webRulesAction" method="openUIAddOrUpdate">
			<result>/WEB-INF/jsp/webrules/input.jsp</result>
		</action>
		<action name="save" class="webRulesAction" method="saveOrUpdate">
			<interceptor-ref name="token"/>
			<interceptor-ref name="myInterceptorStack"/>
		</action>
		<action name="delete" class="webRulesAction" method="delete">
			<interceptor-ref name="token"/>
			<interceptor-ref name="myInterceptorStack"/>
		</action>
		<action name="synchron" class="webRulesAction" method="synchron">
			<interceptor-ref name="token"/>
			<interceptor-ref name="myInterceptorStack"/>
		</action>
		
		<!-- web数据查询 -->
		<action name="datasearch" class="webDataAction" method="findPageList">
			<result name="success">/WEB-INF/jsp/webrules/datalist.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
		<!-- 删除web数据 -->
		<action name="deletewebdata" class="webDataAction" method="deletewebdata">
			<result name="success" type="redirect">datasearch.action</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
		<!-- web数据实时显示 -->
		<action name="webrealdisplay" class="webRealDataAction" method="getRealDateList">
			<result name="success">/WEB-INF/jsp/webrules/realdata.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action> 
		<!-- web报表统一入口 -->
		<action name="report">
			<result>/WEB-INF/jsp/webrules/report.jsp</result>
		</action> 
		<!-- web报表(折线:按照小时统计) -->
		<action name="reportzhexian" class="webReportAction" method="reportZheXian">
			<result name="success">/WEB-INF/jsp/webrules/reportzx.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>   
		<!-- web报表(柱图:按照小时和攻击类型统计) -->
		<action name="reportzhutu" class="webReportAction" method="reportZhuTu">
			<result name="success">/WEB-INF/jsp/webrules/reportzt.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action> 
	</package>
	 
</struts>
