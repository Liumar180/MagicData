@charset "utf-8";
/* CSS Document */
/*可以直接把 clearfix这个样式写到大的div里(<div class=block clearfix"></div>) */
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

*html .clearfix {
    height: 1%;
}

* + html .clearfix {
    height: 1%;
}
*{
	fongt-size:14px;
}
ul li{
	list-style:none;
}
#tt{
	width:98%;
	height:90%;
	margin-left:1%;
}

.tabs-panels{
	border:none;
	height:95%;
}
.panel{
	background:none;
	height: 100%;
}
.panel-body{
	background:none;
	color:#fff;
	height:99%;
	overflow:hidden;
}
.emailtabCon{
	height:100%;
}
.tabs-header, .tabs-tool{
	/*height:30px;
	line-height:30px;*/
	padding-top:0px;
	background:none;
	border:none;
}
.tabs{
	padding-left:0px;
}
/*邮件*/
.tabUlBox{
	height:100%;
}
.tabUlBox ul li {
	float:left;
	height:28px;
	line-height:28px;
	margin-right:8px;
	text-align:center;
	margin-left:16px;
}
/*发送按钮、提取按钮*/
.tabulTit {
	margin-bottom:8px;
	margin-left:5px;
}
.tabulTit li .fsBtn,.tabulTit li .tqBtn{
	background-color:#00538e;
	color:#fff;
	border-radius:5px;
}
.tabulTit .li1 .check,.tabulTit .li2 .fsBtn,.tabulTit .li3 .tqBtn{
	padding:0px 20px;
	display:inline-block;
	text-align:center;
	color:#fff;
}
.tabUlBox ul li input {
	margin-top:7px;}
.tabulList{
	position:relative;
	color:#fff;
	font-size:14px;
}
.tabulList ul {
	margin-bottom:10px;}
.tabulList ul li {
	color:#fff;
	overflow:hidden;
	white-space:nowrap;}
.tabulList ul li.s1 {
	text-overflow:ellipsis;}
.tabulList ul li.s2 {
	width:40px;
	cursor:pointer;
	background:#039;
}

