/*邮件*/
.innerEmailtabCon{
	width:99%;
	height:91%;
	border:1px solid #76A2FA;
	overflow-x:hidden;
	overflow-y:auto;
	padding:15px;
}
.checkP{
	float:left;
}
.emailDiv{
	width:50%;
	float:left;
	margin-left:12px;
	border:1px solid #009cff;
	margin-bottom:15px;
	padding:10px;
	/* position:relative; */
}

.emailDiv dl dt,.emailDiv dl dd{
	float:left;
}
.emailDiv dl dt{
	margin:0px 12px 0px 12px;
}
.emailDiv dl h1{
	font-size:14px;
	font-weight:normal;
	line-height:16px;
	margin:0px 0px 0px 0px;
}
.emailDiv dd{
	width:90%;
	margin-left:0px;
}
.emailDiv dl h1,.emailDiv dl p{
	width:100%;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
	line-height:24px;
}
.emailDiv dl p span{
	margin-right:8px;
}
/*hover出现的div*/
.hoverDiv{
	width:45%;
	position:absolute;
	top:0px;
	right:12px;
	border:1px solid #009cff;
	padding:10px;
	display:none;
	margin-bottom:10px;
	z-index:999;
}
.hoverDiv .listdiv1{
	width:100%;
	line-height:26px;
}
.hoverDiv .listdiv1 b{
	width:15%;
	float:left;
	text-align:left;
	font-weight:normal;
}
.hoverDiv .listdiv1 p{
	width:80%;
	float:left;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
	margin-top:0px;
}

.hoverDiv .listdiv1 p em{
	font-style:normal;
	display:inline-block;
	margin-left:6px;
	background:#a5d24a;
	padding:0px 6px;
	border-radius:5px;
	text-align:center;
}
.hoverDiv .listdiv2 p{
	white-space: normal;
}
.hoverDiv .listdiv2 p em{
	margin-bottom:6px;
}
/*查看详情按钮*/
.btnXx{
	width:100%;
	cursor:pointer;
}
.btnXx a{
	width:20%;
	display:block;
	background:#00538e;
	color:#fff;
	padding:8px 16px;
	border-radius:5px;
	text-align:center;
	margin-left:40%;
	cursor:pointer;
}
/*查看更多*/
.btntestBox{
	width:100%;
	line-height:30px;
	margin:10px 0px;
	cursor:pointer;
}
.btntestBox .btnTest{
	width:15%;
	display:block;
	padding:8px 16px;
	background:#00538e;
	color:#fff;
	border-radius:5px;
	text-align:center;
	margin-left:20%;
}
