<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.integrity.system.auth.bean.Permission" table="permission" >
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="pid" type="java.lang.Long">
            <column name="pid" length="20" >
                <comment>父节点id</comment>
            </column>
        </property>
        <property name="permission" type="java.lang.String">
            <column name="permission" length="64" not-null="true">
                <comment>资源标识</comment>
            </column>
        </property>
        <property name="permissionName" type="java.lang.String">
            <column name="permissionName" length="64" not-null="true">
                <comment>资源名称</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
